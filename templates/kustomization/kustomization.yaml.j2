apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

resources:
  - namespace.yaml
  - storageclass.yaml
  - pv.yaml
  - pvc.yaml
  - awx.yaml

generatorOptions:
  disableNameSuffixHash: true

secretGenerator:
- name: awx-admin-password
  type: Opaque
  literals:
  - password={{ awx_admin_password }}

namespace: awx
